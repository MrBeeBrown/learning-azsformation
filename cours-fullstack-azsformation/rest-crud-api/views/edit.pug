doctype
html(lang='fr')
    head
        // on inclus bootstrap
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        meta(charset='utf-8')
        title Mettre à jour l'utilisateur
    body.container(style="margin-top: 50px")
        if messages.error 
            .alert.alert-danger(role="alert") #{messages.error}
        .card 
            .card-header Mettre à jour l'utilisateur 
            .card-body 
                form(action=`/update/${id}`, method="post")
                    .form-group 
                        label(for="username") Username :
                        input.form-control(type="text", name="username", value=`${username}`, autocomplete="off")
                    .form-group 
                        label(for="email") email:
                        input.form-control(type="text", name="email", value=`${email}`, autocomplete="off")
                    .form-group 
                        input.btn.btn-info(type="submit", value="Mettre à jour")

        // scripts bootstrap
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js", integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")